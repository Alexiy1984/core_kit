mixin item(text='link', link='#', add_class)
  li(class='page-item ' + add_class) 
    a(class='page-link' href= link)= text

ul(class='pagination')
  li(class='page-item control') 
    a(class='page-link')
     svg
        use(xlink:href="../../assets/svg/navigation-sprite/navigation-sprite.svg#chevron left")
  +item(1, '#', 'disabled')
  +item(2, '#')
  +item(3, '#') 
  +item(4, '#', 'active')  
  +item(5, '#') 
  +item(6, '#')
  +item(7, '#')     
  li(class='page-item control') 
    a(class='page-link')
     svg
        use(xlink:href="../../assets/svg/navigation-sprite/navigation-sprite.svg#chevron right")


   
