html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Index
    link(rel="stylesheet", href="../../stylesheets/index.css")
    link(rel="stylesheet", href="../../stylesheets/breadcrumbs.css")

    link(rel="stylesheet", href="../../stylesheets/tabs.css")
    script(src="../../javascripts/jquery.min.js")
    script(src="../../javascripts/bootstrap.bundle.min.js")
  body
    .container
      .row.my-5
        .col-12.mb-3
          ul.breadcrumbs
            each breadcrumb in sp_tabs_breadcrumbs
              - var link = breadcrumb.link 
              - var name = breadcrumb.name 
              - var active = breadcrumb.active 
              - var icon = breadcrumb.icon 
              include ../breadcrumbs/breadcrumbs__item
      .row
        .col-12.mb-2
          include tabs_small
          hr
        .col-12.mb-2
          include tabs
          hr
        .col-12.mb-5
          include tabs_large
          hr  
        .col-12.mb-2
          include pills_large
          hr
        .col-12.mb-2
          include pills
          hr  
        .col-12.mb-2
          include pills_small
          hr    
      